<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="port" value="8081"/>
  </appSettings>
  <system.runtime.remoting>
    <application>
      <channels>
        <channel ref="http" port="8081"/>
      </channels>

      <service>
        <!-- Namespace.Type, Assembly  -->
        <wellknown type="Indexers.LocalIndexer, Indexers"
                   mode="Singleton"
                   objectUri="Indexer"/>
      </service>
    </application>
  </system.runtime.remoting>
</configuration>